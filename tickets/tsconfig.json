{
  "compilerOptions": {
    "target": "es2016",    
    "module": "commonjs", 

    "rootDir": "./", 														// If set to root, then must exclude node_modules
    "outDir": "./dist",  
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 

    "strict": true, 
    "skipLibCheck": true, 

	  "declaration": true, 
  },
  "include": [
		"./jest.setup.ts",
		"src/**/*",
		"tests/**/*",
	],
	"exclude": ["node_modules"]
}
