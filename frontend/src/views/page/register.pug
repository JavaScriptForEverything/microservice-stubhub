doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="/css/tailwind.css")
		script(defer type="module", src="/js/page/register.js") 
		title #{title}

	body(class='bg-slate-50')

		main(
			class='w-full h-screen grid place-items-center'
			class='border-0 border-red-400'
		)

			form(name='register-form')
				h2(class='text-blue-600 my-4 text-center text-2xl') Register Page

				div
					label(class='text-slate-800') Your Name
					input(type='text' 
						name='name'
						placeholder='riajul islam'
						class='w-full outline-none border border-blue-300 px-3 py-1 rounded'
						class='text-slate-700 placeholder:text-slate-400 placeholder:text-sm'
						class='focus:border-blue-500 focus:bg-blue-50  mb-3'
					) 
				div
					label(class='text-slate-700') Your Email
					input(type='email' 
						name='email'
						placeholder='riajul@gmail.com'
						class='w-full outline-none border border-blue-300 px-3 py-1 rounded'
						class='text-slate-700 placeholder:text-slate-400 placeholder:text-sm'
						class='focus:border-blue-500 focus:bg-blue-50  mb-3'
					) 
				div
					label(class='text-slate-700') Your Password
					input(type='password' 
						name='password'
						placeholder='xxxxxxxx'
						class='w-full outline-none border border-blue-300 px-3 py-1 rounded'
						class='text-slate-700 placeholder:text-slate-400 placeholder:text-sm'
						class='focus:border-blue-500 focus:bg-blue-50  mb-3'
					) 
				div
					label(class='text-slate-700') Confirm Password
					input(type='password' 
						name='confirmPassword'
						placeholder='xxxxxxxx'
						class='w-full outline-none border border-blue-300 px-3 py-1 rounded'
						class='text-slate-700 placeholder:text-slate-400 placeholder:text-sm'
						class='focus:border-blue-500 focus:bg-blue-50  mb-3'
					) 

				button(type='submit' 
					class='w-full px-3 py-1 rounded text-blue-500 border border-blue-300'
					class='focus:text-blue-500 focus-text-blue-400'
					class='hover:text-blue-600/80 hover:bg-blue-50/80'
					class='active:text-blue-700 active:bg-blue-100'
					class='disabled:bg-slate-200 disabled:text-slate-500 '
					class=' disabled:border-slate-300 disabled:active:border-slate-300'
				) Register
			
				p(class='px-3 py-1 my-3') Have already an account ? 
					a(href='/login' class='text-blue-500 underline') Login
		
	script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")